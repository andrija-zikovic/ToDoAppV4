{
    "name": "todoappv4",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "packageManager": "yarn@4.1.1",
    "workspaces": [
        "apps/*",
        "shared/*",
        "dev-tools/*"
    ],
    "scripts": {
        "start": "yarn workspace @apps/todoapp dev",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "check": "eslint . --ext .ts | npx prettier . --check",
        "check:fix": "eslint . --ext .ts --fix | npx prettier . --write",
        "storybook": "yarn workspace @dev-tools/storybook start",
        "build-storybook": "yarn workspace @dev-tools/storybook build"
    },
    "devDependencies": {
        "@types/react": "^18.2.65",
        "@types/react-dom": "^18.2.21",
        "@types/tailwindcss": "^3.1.0",
        "@typescript-eslint/eslint-plugin": "^7.0.2",
        "@typescript-eslint/parser": "^7.0.2",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.19",
        "eslint": "^8.57.0",
        "eslint-plugin-react": "^7.34.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "eslint-plugin-storybook": "^0.8.0",
        "postcss": "^8.4.38",
        "prettier": "^3.2.5",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.2.2",
        "vite": "^5.1.4"
    },
    "dependencies": {
        "axios": "^1.6.8",
        "json-server": "^1.0.0-alpha.23"
    }
}
